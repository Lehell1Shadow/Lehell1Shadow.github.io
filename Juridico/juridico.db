CREATE DATABASE IF NOT EXISTS juridico_db;
USE juridico_db;

CREATE TABLE abogados (
    juridico_Id INT AUTO_INCREMENT PRIMARY KEY,
    nombre_Cliente VARCHAR(255) NOT NULL,
    ine VARCHAR(50),
    grupo VARCHAR(100),
    fecha_Entrega_Documento DATE,
    fecha_Diligencia DATE,
    monto_Adeudo DECIMAL(12,2) DEFAULT 0,
    monto_Abogado DECIMAL(12,2) DEFAULT 0,
    monto_Convenio DECIMAL(12,2) DEFAULT 0,
    embargo_Bienes VARCHAR(255),
    descripcion_Bienes TEXT,
    comentario TEXT,
    garantia BOOLEAN DEFAULT 0
);

